<% title = "Registracija" %>
<h1 class="mb-4">📝 Registracija</h1>

<form action="/register" method="POST" class="mt-3">
  <div class="mb-3">
    <label for="ime" class="form-label">Ime i prezime</label>
    <input type="text" class="form-control" id="ime" name="ime" required />
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Email adresa</label>
    <input type="email" class="form-control" id="email" name="email" required />
  </div>

  <div class="mb-3">
    <label for="lozinka" class="form-label">Lozinka</label>
    <input type="password" class="form-control" id="lozinka" name="lozinka" required />
  </div>

  <button type="submit" class="btn btn-success">Registriraj se</button>
</form>

<p class="mt-3">Već imaš račun? <a href="/login">Prijavi se ovdje</a></p>
