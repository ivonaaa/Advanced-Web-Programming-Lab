<% title = "Projekti kao član" %>
<h1 class="mb-4">👥 Projekti gdje ste član tima</h1>

<% if (projekti.length === 0) { %>
  <p>Trenutno niste član nijednog projekta.</p>
<% } else { %>
  <ul class="list-group">
    <% projekti.forEach(p => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <strong><%= p.naziv %></strong>
        <a href="/projects/<%= p._id %>" class="btn btn-sm btn-outline-secondary">Detalji</a>
      </li>
    <% }) %>
  </ul>
<% } %>
